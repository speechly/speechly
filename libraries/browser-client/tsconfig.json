{
  "compilerOptions": {
    "outDir": "core",
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "src/index.ts"],
  "exclude": ["node_modules"]
}
